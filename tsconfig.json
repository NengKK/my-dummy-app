{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"sourceMap": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"removeComments": true,
		"lib": ["es6", "esnext"],
		"moduleResolution": "node",
        "outDir": "./built"
	},
	"exclude": ["node_modules", "built"]
}
